<odoo>
    <data>
        <record id="library_book_lease_view_form" model="ir.ui.view">
        <field name="name">Library Book Lease From</field>
         <field name="model">library.book.lease</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="borrower_id">Borrower</field>
                        <field name="date_return">Return date</field>
                        <field name="book_ids">Books</field>
                    </group>

                </sheet>
                <footer>
                    <button name="confirm" string="Confirm" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    </data>
</odoo>
